    <%= f.label :url %> 
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :entry %><br />
    <%= f.text_area :entry %>
  </div>  

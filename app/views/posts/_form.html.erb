<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :post_date %><br />
    <%= f.datetime_select :post_date %>
  </div>
  <div class="field">
    <%= label :author, :author_id, "Authors" %><br />
    <%= collection_select(:author, :author_ids, Author.all, :id, :name, {:selected => lambda{|author| @post.authors.include?(author) }}) %>
  </div>
  <div class="field">
    <%= f.label :teaser %><br />
    <%= f.text_area :teaser %>
  </div>
  <div class="field">
    <%= f.label :entry %><br />
    <%= f.text_area :entry %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
